@using ÖğrenciNotMvc.Models.EntityFrameWork
@model List<tbl_öğrenciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Öğrenci ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Cinsiyet</th>
        <th>Kulüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
         {
            <tr>
                <td>@ogr.ÖğrenciID</td>
                <td>@ogr.ÖğrAD</td>
                <td>@ogr.ÖğrSoyad</td>
                <td>@ogr.ÖğrCinsiyet</td>
                <td>@ogr.tbl_kulüpler.KulüpAd</td>
                <td>
                    <a href="/Ogrenci/Sil/@ogr.ÖğrenciID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/ÖğrenciGetir/@ogr.ÖğrenciID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
         }
    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>

